{
  "name": "parche-queer-monorepo",
  "version": "1.0.0",
  "description": "Plataforma social y marketplace LGBTQ+ para Colombia",
  "private": true,
  "workspaces": [
    "apps/mobile",
    "apps/web",
    "apps/backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:mobile\" \"npm run dev:web\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:mobile": "cd apps/mobile && npx expo start",
    "dev:web": "cd apps/web && npm run dev",
    "dev:ai": "cd apps/ai-service && uvicorn app.main:app --reload",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "cd apps/backend && npm run build",
    "build:web": "cd apps/web && npm run build",
    "test": "npm run test:backend && npm run test:mobile",
    "test:backend": "cd apps/backend && npm run test",
    "test:mobile": "cd apps/mobile && npm test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "docker:up": "cd infrastructure/docker && docker-compose up -d",
    "docker:down": "cd infrastructure/docker && docker-compose down",
    "db:migrate": "cd apps/backend && npm run migration:run",
    "db:seed": "cd apps/backend && npm run seed"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
